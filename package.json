{
  "name": "@humanmade/publication-checklist",
  "version": "1.0.0",
  "description": "A simple, yet flexible publication checklist for WordPress.",
  "author": "Human Made",
  "license": "GPL-2.0-or-later",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.23.3",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@wordpress/scripts": "^26.17.0",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "node-sass": "^9.0.0",
    "prop-types": "^15.8.1",
    "rc-progress": "^3.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rememo": "^4.0.2"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^17.3.0",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.9.0"
  },
  "scripts": {
    "build": "wp-scripts build && node-sass -o build src",
    "lint:js": "wp-scripts lint-js src",
    "lint:pkg-json": "wp-scripts lint-pkg-json package.json",
    "lint:style": "wp-scripts lint-style '**/*.scss'",
    "start": "wp-scripts start",
    "test:unit": "wp-scripts test-unit-js",
    "translate": "npm run translate:pot && npm run translate:update",
    "translate:pot": "wp i18n make-pot . ./languages/altis-publication-checklist.pot --exclude=\"node_modules,vendor,src\"",
    "translate:update": "wp i18n update-po ./languages/altis-publication-checklist.pot ./languages/*.po",
    "translate:compile": "npm run translate:mo && npm run translate:js",
    "translate:js": "wp i18n make-json ./languages --pretty-print",
    "translate:mo": "wp i18n make-mo ./languages ./languages"
  }
}
